<Page x:Class="SifatSavdo.App.Pages.SignInPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:local="clr-namespace:SifatSavdo.App.Pages"
      mc:Ignorable="d" 
      MinHeight="684" MinWidth="1170" MaxHeight="684" MaxWidth="1170"
      Title="SignIn">

    <Border Background="DodgerBlue">
        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBox Style="{StaticResource MaterialDesignDataGridTextColumnEditingStyle}" md:HintAssist.IsFloating="True" md:TextFieldAssist.PrefixText="+998" md:HintAssist.Hint="Enter your phone" Margin="0 0 0 10" Padding="5" />
            <Button x:Name="loginBtn" Click="loginBtn_Click" Content="Login" Margin="0 0 0 10"/>
        </StackPanel>
    </Border>
</Page>
